# Foreman Environment Configuration Template
# Copy this file to .env and update with your values

# Database Configuration
FOREMAN_DB_HOST=localhost
FOREMAN_DB_PORT=5432
FOREMAN_DB_NAME=foreman
FOREMAN_DB_USER=postgres
FOREMAN_DB_PASSWORD=your-secure-password-here

# Database Users for Row Level Security
UNRESTRICTED_DB_USER=postgres
UNRESTRICTED_DB_USER_PASSWORD=your-secure-password-here
RLS_DB_USER=foreman_app
RLS_DB_USER_PASSWORD=your-secure-password-here

# Server Configuration
FOREMAN_SERVER_PORT=5002
LOG_LEVEL=info

# Security
JWT_SECRET=your-secure-jwt-secret-here

# CORS Configuration
# CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100

# Docker Configuration
# RUN_MIGRATIONS=true  # Enable automatic database migrations (Docker only)

# Docker Registry Configuration (for docker-compose.prod.yml)
# REGISTRY_IMAGE=ghcr.io/yourorg/foreman
# TAG=latest