{
  "name": "@codespin/foreman",
  "version": "0.0.1",
  "description": "A workflow orchestration engine with REST API",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "./build.sh",
    "clean": "./clean.sh",
    "start": "./start.sh",
    "test": "npm run test:integration:all",
    "migrate:all": "./scripts/db-all.sh migrate:latest",
    "migrate:all:rollback": "./scripts/db-all.sh migrate:rollback",
    "migrate:all:status": "./scripts/db-all.sh migrate:status",
    "seed:all": "./scripts/db-all.sh seed:run",
    "migrate:foreman:make": "knex migrate:make --knexfile database/foreman/knexfile.js",
    "migrate:foreman:latest": "knex migrate:latest --knexfile database/foreman/knexfile.js",
    "migrate:foreman:rollback": "knex migrate:rollback --knexfile database/foreman/knexfile.js",
    "migrate:foreman:status": "knex migrate:status --knexfile database/foreman/knexfile.js",
    "seed:foreman:make": "knex seed:make --knexfile database/foreman/knexfile.js",
    "seed:foreman:run": "knex seed:run --knexfile database/foreman/knexfile.js",
    "db:dump-schema": "./scripts/dump-db-schema.sh",
    "test:integration:foreman": "cd node/packages/foreman-integration-tests && npm test",
    "test:integration:grep": "cd node/packages/foreman-integration-tests && npm run test:grep",
    "test:client": "cd node/packages/foreman-client && npm test",
    "test:client:grep": "cd node/packages/foreman-client && npm run test:grep",
    "test:integration:all": "npm run test:integration:foreman && npm run test:client"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "chai": "^5.1.2",
    "eslint": "^9.17.0",
    "mocha": "^11.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "knex": "^3.1.0",
    "pg": "^8.13.1"
  }
}